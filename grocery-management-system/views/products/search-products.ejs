<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Products</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen">
    <div class="container mx-auto px-4 py-8">
        <div class="flex justify-between items-center mb-6">
            <h1 class="text-3xl font-bold text-gray-800">Search Products</h1>
            <a href="/" class="bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded-md transition-colors">
                ‚Üê Back to Home
            </a>
        </div>

        <!-- Search Form -->
        <div class="bg-white rounded-lg shadow-md p-6 mb-6">
            <form action="/product/inrange" method="GET" class="grid grid-cols-1 md:grid-cols-4 gap-4">
                <div>
                    <label for="min" class="block text-sm font-medium text-gray-700 mb-1">Min Price</label>
                    <input type="number" id="min" name="min" value="<%= min || '' %>" 
                           class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>
                <div>
                    <label for="max" class="block text-sm font-medium text-gray-700 mb-1">Max Price</label>
                    <input type="number" id="max" name="max" value="<%= max || '' %>"
                           class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>
                <div>
                    <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Product Name</label>
                    <input type="text" id="name" name="name" value="<%= name || '' %>"
                           class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>
                <div class="flex items-end">
                    <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white px-6 py-2 rounded-md transition-colors w-full">
                        Search
                    </button>
                </div>
            </form>
        </div>

        <!-- Results -->
        <% if (products.length > 0) { %>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <% products.forEach(product => { %>
                    <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
                        <h3 class="text-xl font-semibold text-gray-800 mb-2"><%= product.ProductName %></h3>
                        <div class="space-y-2 text-gray-600">
                            <p><strong>Firm:</strong> <%= product.FirmName %></p>
                            <p><strong>Price:</strong> $<%= product.Price %></p>
                            <p><strong>Quantity:</strong> <%= product.Quantity %></p>
                            <p><strong>Expiry:</strong> <%= product.ExpiryDate.toLocaleDateString() %></p>
                        </div>
                        <div class="mt-4">
                            <a href="/products/<%= product._id %>" class="bg-blue-500 hover:bg-blue-600 text-white px-3 py-1 rounded text-sm transition-colors">
                                View Details
                            </a>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } else if (min || max || name) { %>
            <div class="bg-white rounded-lg shadow-md p-8 text-center">
                <p class="text-gray-600 text-lg">No products found matching your criteria.</p>
            </div>
        <% } %>
    </div>
</body>
</html>